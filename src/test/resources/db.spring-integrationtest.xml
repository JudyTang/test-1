<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <bean id="jdbcTemplate" class="com.pointcarbon.springmock.MockitoFactoryBean">
    <constructor-arg name="classToBeMocked" value="org.springframework.jdbc.core.JdbcTemplate" />
  </bean>

  <bean id="ftpFileDao" class="com.pointcarbon.springmock.MockitoFactoryBean">
    <constructor-arg name="classToBeMocked" value="com.pointcarbon.esb.app.example.dao.ExampleDao" />
  </bean>


</beans>